<!DOCTYPE html>
<html lang="it">
  <head>
    <link rel="icon" href="/public/images/favicon.ico" />
    <link rel="stylesheet" href="/public/stylesheets/style.css" />
    <link
      rel="manifest"
      type="application/manifest+json"
      href="/app.webmanifest"
    />
    <meta name="viewport" content="initial-scale=1, width=device-width" />
    <title>Pokédex</title>
  </head>
  <body>
    <div id="container">
      <div id="logo">
        <a href="/"><img alt="" src="/public/images/pokedle-logo.webp" /></a>
      </div>
      <h1 id="pokedex-title"><a id="proflink"><%= name %></a>'s Pokédex</h1>
      <h2 id="pokedex-numbers"></h2>
    </div>
    <script type="module">
      import { pokemons } from "../../public/js/pokemon.js";

      var str = window.location.href;
      var ref = str.substring(0, str.length - 8); // removig "/pokedex"
      document.getElementById("proflink").href = ref;

      var container = document.getElementById("container");
      var div = document.createElement("DIV");

      // generating all the pokedex rows as unknown
      for (var i = 0; i < pokemons.length; i++) {
        var subdiv = document.createElement("DIV");
        subdiv.setAttribute("class", "pokedex-row");
        subdiv.setAttribute("id", pokemons[i]);
        subdiv.innerHTML = `<p class="pokedex-row-numbers">${i + 1}.</p>
        <img
            src="/public/images/sprites/unknown.png"
            width="90px"
            height="90px"
          />
          <p class="pokedex-text">???</p>`;
        div.appendChild(subdiv);
      }
      container.appendChild(div);

      // replacing some unknown rows with known ones (according to the user's history)
      var history = `<%- JSON.stringify(history) %>`;
      history = JSON.parse(history);
      document.getElementById(
        "pokedex-numbers"
      ).textContent = `${history.length}/${pokemons.length} Pokémons discovered`;
      for (var i = 0; i < history.length; i++) {
        var subdiv = document.getElementById(history[i].pokemon);
        subdiv.innerHTML = `<p class="pokedex-row-numbers">${subdiv.firstChild.innerHTML}</p>
          <img
            src="/public/images/sprites/${history[i].pokemon}.png"
            width="100px"
            height="100px"
          />
          <p class="pokedex-text">${history[i].pokemon}</p>
          <p class="pokedex-text">Guessed: ${history[i].timesGuessed}</p>`;
      }
    </script>
  </body>
</html>
